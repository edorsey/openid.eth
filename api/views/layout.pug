  if domain
    script.
      (function () {
        try {
          if (!window.config) {
            window.config = {};
          }

          const domain = "!{ domain }";
          if (domain) {
            window.config.domain = domain;
          }
        } catch (err) {
          console.error("domain not found");
        }
      })();

  if profileJSON
    script.
      (function () {
        try {
          const profile = !{ profileJSON };

          if (profile) {
            window.profile = profile;
          }
        } catch (err) {
          console.error("Profile not found");
        }
      })();

